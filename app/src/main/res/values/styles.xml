<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="roundedCornerImageView" parent="">
        <item name="cornerSize">6dp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="HorizontalProgressBarStyle" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateTint">@color/red</item>
        <item name="android:indeterminateTintMode">src_atop</item>
        <item name="android:max">100</item>
        <item name="android:progress">65</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateBehavior">cycle</item>
    </style>

</resources>